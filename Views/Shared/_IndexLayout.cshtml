@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
	string defaultLogoSource = Constants.DefaultLogoSource;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CountryhouseService</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src=@defaultLogoSource style="height:25px; width:25px" /> Countryhouse Service</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Ads" asp-action="Index">Ads</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Requests" asp-action="Index">Requests</a>
						</li>
					</ul>
					@if (SignInManager.IsSignedIn(User))
					{
						<ul class="navbar-nav">
							<li>
								<a class="btn btn-outline-primary mr-1" asp-area="" asp-controller="Users" asp-action="Profile" asp-route-showCurrentUserData="true">My Profile</a>
							</li>
							<li>
								<a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Logout">Log Out</a>
							</li>
						</ul>
					}
					else
					{
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="btn btn-primary mr-1" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
							</li>
							<li class="nav-item">
								<a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
							</li>
						</ul>
					}

				</div>
			</div>
		</nav>
	</header>
	
	<div role="main">
		@RenderBody()
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<div class="row justify-content-end">
				<div class="col-4 text-center">
					&copy; @DateTime.Today.Year - Countryhouse Service - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="flex-grow-1">Privacy</a>
				</div>
				<div class="col-4 text-right">
					<a asp-controller="Home" asp-action="About">About</a> |
					<a asp-controller="Home" asp-action="Rules">Rules</a>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>