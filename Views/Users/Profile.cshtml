@model CountryhouseService.ViewModels.ProfilePagedResult
@{
    ViewData["Title"] = Model.User.FirstName + "'s Profile";
}

@if (Model != null)
{
    <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="@Model.Avatar" alt="Avatar" class="img-thumbnail" width="150">
                        <div class="mt-3">
                            <h4>@Model.User.FirstName @Model.User.LastName</h4>
                            <p class="text-secondary mb-1">@Model.User.Email</p>
                            <p class="text-muted font-size-sm">@Model.Role</p>
                            @if (!string.IsNullOrEmpty(Model.ShowCurrentUserData) && Model.Role == "Owner")
                            {
                                <a asp-controller="Ads" asp-action="Index" asp-route-showCurrentUserData="true" class="btn btn-primary">View My Ads</a>
                                <a asp-controller="Ads" asp-action="Create" class="btn btn-outline-primary">Create Ad</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.User.FirstName @Model.User.LastName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.User.Email
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>User not found</p>
}